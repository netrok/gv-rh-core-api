<?xml version="1.0" encoding="UTF-8"?>
<jasperReport
        xmlns="http://jasperreports.sourceforge.net/jasperreports"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
        name="empleado_ficha"
        pageWidth="595"
        pageHeight="842"
        orientation="Portrait"
        columnWidth="555"
        leftMargin="20"
        rightMargin="20"
        topMargin="20"
        bottomMargin="20"
        whenResourceMissingType="Empty">

    <!-- ===== Estilos ===== -->
    <style name="Base" fontName="Helvetica" fontSize="10"/>
    <style name="Label" style="Base" isBold="true" forecolor="#666666"/>
    <style name="Value" style="Base" isBold="false"/>
    <style name="SectionTitle" style="Base" isBold="true" fontSize="12" forecolor="#374151"/>
    <style name="HeaderBackground" mode="Opaque" backcolor="#111827"/>
    <style name="HeaderTitle" style="Base" isBold="true" fontSize="16" forecolor="#FFFFFF"/>

    <style name="HeaderSubtitle"
           style="Base"
           fontSize="9"
           forecolor="#D1D5DB"/>

    <style name="BadgeActivo" style="Base" isBold="true" mode="Opaque" backcolor="#10B981" forecolor="#FFFFFF"/>
    <style name="BadgeInactivo" style="Base" isBold="true" mode="Opaque" backcolor="#EF4444" forecolor="#FFFFFF"/>

    <!-- ===== Parámetros ===== -->
    <parameter name="LOGO_PATH" class="java.lang.String"/>

    <!-- ===== Campos DTO ===== -->
    <field name="nombreCompleto" class="java.lang.String"/>
    <field name="numEmpleado" class="java.lang.String"/>
    <field name="iniciales" class="java.lang.String"/>
    <field name="activo" class="java.lang.Boolean"/>

    <field name="puesto" class="java.lang.String"/>
    <field name="departamento" class="java.lang.String"/>
    <field name="fechaIngreso" class="java.lang.String"/>
    <field name="supervisorNombre" class="java.lang.String"/>

    <field name="telefono" class="java.lang.String"/>
    <field name="email" class="java.lang.String"/>
    <field name="direccionCompleta" class="java.lang.String"/>

    <field name="curp" class="java.lang.String"/>
    <field name="rfc" class="java.lang.String"/>
    <field name="nss" class="java.lang.String"/>

    <field name="fechaNacimiento" class="java.lang.String"/>
    <field name="genero" class="java.lang.String"/>
    <field name="estadoCivil" class="java.lang.String"/>
    <field name="nacionalidad" class="java.lang.String"/>
    <field name="lugarNacimiento" class="java.lang.String"/>
    <field name="tipoSangre" class="java.lang.String"/>

    <field name="banco" class="java.lang.String"/>
    <field name="cuentaBancaria" class="java.lang.String"/>
    <field name="clabe" class="java.lang.String"/>
    <field name="tipoContrato" class="java.lang.String"/>
    <field name="tipoJornada" class="java.lang.String"/>
    <field name="fechaBaja" class="java.lang.String"/>
    <field name="motivoBaja" class="java.lang.String"/>

    <field name="imssRegPatronal" class="java.lang.String"/>
    <field name="infonavitNumero" class="java.lang.String"/>
    <field name="fonacotNumero" class="java.lang.String"/>

    <field name="contactoNombre" class="java.lang.String"/>
    <field name="contactoParentesco" class="java.lang.String"/>
    <field name="contactoTelefono" class="java.lang.String"/>

    <!-- ================= ENCABEZADO ================= -->
    <title>
        <band height="80">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="80" style="HeaderBackground"/>
            </rectangle>

            <image>
                <reportElement x="10" y="10" width="120" height="60"/>
                <imageExpression><![CDATA[$P{LOGO_PATH}]]></imageExpression>
            </image>

            <staticText>
                <reportElement x="150" y="20" width="250" height="25" style="HeaderTitle"/>
                <text><![CDATA[Ficha del empleado]]></text>
            </staticText>

            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="410" y="25" width="135" height="18" style="HeaderSubtitle"/>
                <textElement textAlignment="Right" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- ================= DETALLE ================= -->
    <detail>
        <band height="640" splitType="Stretch">

            <!-- Tarjeta -->
            <rectangle>
                <reportElement x="10" y="10" width="535" height="610" mode="Opaque" backcolor="#FFFFFF"/>
            </rectangle>

            <!-- Avatar -->
            <ellipse>
                <reportElement x="30" y="30" width="90" height="90"/>
                <graphicElement>
                    <pen lineWidth="0.5" lineColor="#DDDDDD"/>
                </graphicElement>
            </ellipse>

            <textField isBlankWhenNull="true">
                <reportElement x="30" y="60" width="90" height="40"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="18" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{iniciales}]]></textFieldExpression>
            </textField>

            <!-- Nombre / num -->
            <textField isBlankWhenNull="true">
                <reportElement x="140" y="35" width="300" height="20"/>
                <textElement>
                    <font size="14" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{nombreCompleto}]]></textFieldExpression>
            </textField>

            <textField isBlankWhenNull="true">
                <reportElement x="140" y="60" width="250" height="16"/>
                <textFieldExpression><![CDATA["Núm. empleado: " + $F{numEmpleado}]]></textFieldExpression>
            </textField>

            <!-- Badge único ACTIVO / INACTIVO con styleExpression -->
            <textField isBlankWhenNull="true">
                <reportElement x="450" y="35" width="80" height="18">
                    <styleExpression><![CDATA[
                        ($F{activo} != null && $F{activo})
                            ? "BadgeActivo"
                            : "BadgeInactivo"
                    ]]></styleExpression>
                </reportElement>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[
                    ($F{activo} != null && $F{activo})
                        ? "ACTIVO"
                        : "INACTIVO"
                ]]></textFieldExpression>
            </textField>

            <!-- ===== DATOS GENERALES ===== -->
            <staticText>
                <reportElement x="30" y="135" width="250" height="16" style="SectionTitle"/>
                <text><![CDATA[Datos generales]]></text>
            </staticText>

            <!-- Puesto / Departamento -->
            <staticText>
                <reportElement x="30" y="155" width="80" height="14" style="Label"/>
                <text><![CDATA[Puesto]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="115" y="155" width="180" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{puesto}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="310" y="155" width="90" height="14" style="Label"/>
                <text><![CDATA[Departamento]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="405" y="155" width="120" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{departamento}]]></textFieldExpression>
            </textField>

            <!-- Fecha ingreso / Supervisor -->
            <staticText>
                <reportElement x="30" y="173" width="90" height="14" style="Label"/>
                <text><![CDATA[Fecha ingreso]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="115" y="173" width="180" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{fechaIngreso}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="310" y="173" width="80" height="14" style="Label"/>
                <text><![CDATA[Supervisor]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="405" y="173" width="120" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{supervisorNombre}]]></textFieldExpression>
            </textField>

            <!-- Fecha nacimiento / Género -->
            <staticText>
                <reportElement x="30" y="191" width="90" height="14" style="Label"/>
                <text><![CDATA[F. nacimiento]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="115" y="191" width="180" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{fechaNacimiento}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="310" y="191" width="80" height="14" style="Label"/>
                <text><![CDATA[Género]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="405" y="191" width="120" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{genero}]]></textFieldExpression>
            </textField>

            <!-- Estado civil / Nacionalidad -->
            <staticText>
                <reportElement x="30" y="209" width="90" height="14" style="Label"/>
                <text><![CDATA[Estado civil]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="115" y="209" width="180" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{estadoCivil}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="310" y="209" width="80" height="14" style="Label"/>
                <text><![CDATA[Nacionalidad]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="405" y="209" width="120" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{nacionalidad}]]></textFieldExpression>
            </textField>

            <!-- Lugar nacimiento / Tipo sangre -->
            <staticText>
                <reportElement x="30" y="227" width="110" height="14" style="Label"/>
                <text><![CDATA[Lugar nacimiento]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="140" y="227" width="155" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{lugarNacimiento}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="310" y="227" width="90" height="14" style="Label"/>
                <text><![CDATA[Tipo sangre]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="405" y="227" width="120" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{tipoSangre}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="30" y="248" width="495" height="1" forecolor="#E5E7EB"/>
            </line>

            <!-- ===== DATOS DE CONTACTO ===== -->
            <staticText>
                <reportElement x="30" y="263" width="200" height="16" style="SectionTitle"/>
                <text><![CDATA[Datos de contacto]]></text>
            </staticText>

            <staticText>
                <reportElement x="30" y="283" width="80" height="14" style="Label"/>
                <text><![CDATA[Teléfono]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="115" y="283" width="155" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{telefono}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="310" y="283" width="120" height="14" style="Label"/>
                <text><![CDATA[Correo electrónico]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="430" y="283" width="95" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{email}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="30" y="301" width="80" height="14" style="Label"/>
                <text><![CDATA[Dirección]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="115" y="301" width="410" height="28" style="Value"/>
                <textElement verticalAlignment="Top"/>
                <textFieldExpression><![CDATA[$F{direccionCompleta}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="30" y="335" width="495" height="1" forecolor="#E5E7EB"/>
            </line>

            <!-- ===== DOCUMENTOS Y SEGURIDAD SOCIAL ===== -->
            <staticText>
                <reportElement x="30" y="350" width="250" height="16" style="SectionTitle"/>
                <text><![CDATA[Documentos y seguridad social]]></text>
            </staticText>

            <staticText>
                <reportElement x="30" y="370" width="60" height="14" style="Label"/>
                <text><![CDATA[CURP]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="95" y="370" width="180" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{curp}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="295" y="370" width="50" height="14" style="Label"/>
                <text><![CDATA[RFC]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="350" y="370" width="170" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{rfc}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="30" y="388" width="60" height="14" style="Label"/>
                <text><![CDATA[NSS]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="95" y="388" width="180" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{nss}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="295" y="388" width="110" height="14" style="Label"/>
                <text><![CDATA[Reg. patronal IMSS]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="410" y="388" width="110" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{imssRegPatronal}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="30" y="406" width="100" height="14" style="Label"/>
                <text><![CDATA[INFONAVIT núm.]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="135" y="406" width="140" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{infonavitNumero}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="295" y="406" width="100" height="14" style="Label"/>
                <text><![CDATA[FONACOT núm.]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="400" y="406" width="120" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{fonacotNumero}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="30" y="430" width="495" height="1" forecolor="#E5E7EB"/>
            </line>

            <!-- ===== DATOS LABORALES / BANCO ===== -->
            <staticText>
                <reportElement x="30" y="445" width="250" height="16" style="SectionTitle"/>
                <text><![CDATA[Datos laborales y bancarios]]></text>
            </staticText>

            <!-- Banco / Cuenta -->
            <staticText>
                <reportElement x="30" y="465" width="60" height="14" style="Label"/>
                <text><![CDATA[Banco]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="95" y="465" width="180" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{banco}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="295" y="465" width="100" height="14" style="Label"/>
                <text><![CDATA[Cuenta bancaria]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="400" y="465" width="120" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{cuentaBancaria}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="30" y="483" width="60" height="14" style="Label"/>
                <text><![CDATA[CLABE]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="95" y="483" width="180" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{clabe}]]></textFieldExpression>
            </textField>

            <!-- Tipo contrato / jornada -->
            <staticText>
                <reportElement x="295" y="483" width="90" height="14" style="Label"/>
                <text><![CDATA[Tipo contrato]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="390" y="483" width="130" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{tipoContrato}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="30" y="501" width="90" height="14" style="Label"/>
                <text><![CDATA[Tipo jornada]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="125" y="501" width="150" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{tipoJornada}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="295" y="501" width="90" height="14" style="Label"/>
                <text><![CDATA[Fecha baja]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="390" y="501" width="130" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{fechaBaja}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="30" y="519" width="90" height="14" style="Label"/>
                <text><![CDATA[Motivo baja]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="125" y="519" width="395" height="28" style="Value"/>
                <textElement verticalAlignment="Top"/>
                <textFieldExpression><![CDATA[$F{motivoBaja}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="30" y="552" width="495" height="1" forecolor="#E5E7EB"/>
            </line>

            <!-- ===== CONTACTO DE EMERGENCIA ===== -->
            <staticText>
                <reportElement x="30" y="567" width="250" height="16" style="SectionTitle"/>
                <text><![CDATA[Contacto de emergencia]]></text>
            </staticText>

            <staticText>
                <reportElement x="30" y="587" width="80" height="14" style="Label"/>
                <text><![CDATA[Nombre]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="115" y="587" width="200" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{contactoNombre}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="330" y="587" width="80" height="14" style="Label"/>
                <text><![CDATA[Parentesco]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="415" y="587" width="110" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{contactoParentesco}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="30" y="605" width="80" height="14" style="Label"/>
                <text><![CDATA[Teléfono]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="115" y="605" width="200" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{contactoTelefono}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <!-- ================= PIE (FIRMAS / FOLIO) ================= -->
    <summary>
        <band height="80">

            <!-- Firma empleado -->
            <staticText>
                <reportElement x="60" y="0" width="180" height="12" style="Label"/>
                <text><![CDATA[Firma del empleado]]></text>
            </staticText>
            <line>
                <reportElement x="60" y="16" width="180" height="1" forecolor="#9CA3AF"/>
            </line>

            <!-- Firma RH -->
            <staticText>
                <reportElement x="360" y="0" width="180" height="12" style="Label"/>
                <text><![CDATA[Firma Recursos Humanos]]></text>
            </staticText>
            <line>
                <reportElement x="360" y="16" width="180" height="1" forecolor="#9CA3AF"/>
            </line>

            <!-- Folio -->
            <textField isBlankWhenNull="true">
                <reportElement x="60" y="32" width="250" height="12" style="Value"/>
                <textFieldExpression><![CDATA[
                    "Folio: FICHA-" + $F{numEmpleado}
                ]]></textFieldExpression>
            </textField>

        </band>
    </summary>

</jasperReport>
