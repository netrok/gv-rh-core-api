                <text><![CDATA[Fecha ingreso]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="173" width="160" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{fechaIngreso}]]></textFieldExpression>
