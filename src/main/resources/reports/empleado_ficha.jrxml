<?xml version="1.0" encoding="UTF-8"?>
<jasperReport
        xmlns="http://jasperreports.sourceforge.net/jasperreports"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
        name="empleado_ficha"
        pageWidth="595"
        pageHeight="842"
        orientation="Portrait"
        columnWidth="555"
        leftMargin="20"
        rightMargin="20"
        topMargin="20"
        bottomMargin="20"
        whenResourceMissingType="Empty">

    <!-- ===== Estilos ===== -->
    <style name="Base" fontName="Helvetica" fontSize="10"/>
    <style name="Label" style="Base" isBold="true" forecolor="#666666"/>
    <style name="Value" style="Base" isBold="false"/>
    <style name="SectionTitle" style="Base" isBold="true" fontSize="12" forecolor="#374151"/>
    <style name="HeaderBackground" mode="Opaque" backcolor="#111827"/>
    <style name="HeaderTitle" style="Base" isBold="true" fontSize="16" forecolor="#FFFFFF"/>
    <style name="HeaderSubtitle" style="Base" fontSize="9" forecolor="#D1D5DB"/>

    <style name="BadgeActivo" style="Base" isBold="true" mode="Opaque" backcolor="#10B981" forecolor="#FFFFFF"/>
    <style name="BadgeInactivo" style="Base" isBold="true" mode="Opaque" backcolor="#EF4444" forecolor="#FFFFFF"/>

    <!-- ===== Parámetros ===== -->
    <parameter name="LOGO_PATH" class="java.lang.String"/>

    <!-- ===== Campos DTO ===== -->
    <field name="nombreCompleto" class="java.lang.String"/>
    <field name="numEmpleado" class="java.lang.String"/>
    <field name="iniciales" class="java.lang.String"/>
    <field name="activo" class="java.lang.Boolean"/>

    <field name="puesto" class="java.lang.String"/>
    <field name="departamento" class="java.lang.String"/>
    <field name="fechaIngreso" class="java.lang.String"/>
    <field name="supervisorNombre" class="java.lang.String"/>

    <field name="telefono" class="java.lang.String"/>
    <field name="email" class="java.lang.String"/>
    <field name="direccionCompleta" class="java.lang.String"/>

    <field name="curp" class="java.lang.String"/>
    <field name="rfc" class="java.lang.String"/>
    <field name="nss" class="java.lang.String"/>

    <field name="fechaNacimiento" class="java.lang.String"/>
    <field name="genero" class="java.lang.String"/>
    <field name="estadoCivil" class="java.lang.String"/>
    <field name="nacionalidad" class="java.lang.String"/>
    <field name="lugarNacimiento" class="java.lang.String"/>
    <field name="tipoSangre" class="java.lang.String"/>

    <field name="banco" class="java.lang.String"/>
    <field name="cuentaBancaria" class="java.lang.String"/>
    <field name="clabe" class="java.lang.String"/>
    <field name="tipoContrato" class="java.lang.String"/>
    <field name="tipoJornada" class="java.lang.String"/>
    <field name="fechaBaja" class="java.lang.String"/>
    <field name="motivoBaja" class="java.lang.String"/>

    <field name="imssRegPatronal" class="java.lang.String"/>
    <field name="infonavitNumero" class="java.lang.String"/>
    <field name="fonacotNumero" class="java.lang.String"/>

    <field name="contactoNombre" class="java.lang.String"/>
    <field name="contactoParentesco" class="java.lang.String"/>
    <field name="contactoTelefono" class="java.lang.String"/>

    <!-- ================= ENCABEZADO ================= -->
    <title>
        <band height="80">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="80" style="HeaderBackground"/>
            </rectangle>

            <!-- Logo -->
            <image>
                <reportElement x="20" y="10" width="120" height="60"/>
                <imageExpression><![CDATA[$P{LOGO_PATH}]]></imageExpression>
            </image>

            <!-- Título centrado -->
            <staticText>
                <reportElement x="0" y="20" width="555" height="25" style="HeaderTitle"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Ficha del empleado]]></text>
            </staticText>

            <!-- Fecha / hora -->
            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="380" y="45" width="165" height="18" style="HeaderSubtitle"/>
                <textElement textAlignment="Right" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- ================= DETALLE ================= -->
    <detail>
        <band height="640" splitType="Stretch">

            <!-- Tarjeta principal -->
            <rectangle>
                <reportElement x="10" y="10" width="535" height="610" mode="Opaque" backcolor="#FFFFFF"/>
                <graphicElement>
                    <pen lineWidth="0.5" lineColor="#E5E7EB"/>
                </graphicElement>
            </rectangle>

            <!-- Avatar (x relativo al card: 30 dentro) -->
            <ellipse>
                <reportElement x="40" y="30" width="90" height="90"/>
                <graphicElement>
                    <pen lineWidth="0.5" lineColor="#DDDDDD"/>
                </graphicElement>
            </ellipse>

            <textField>
                <reportElement x="40" y="60" width="90" height="40"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="18" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{iniciales}]]></textFieldExpression>
            </textField>

            <!-- Nombre / num (alineado al grid interno) -->
            <textField>
                <reportElement x="150" y="40" width="260" height="20"/>
                <textElement>
                    <font size="14" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{nombreCompleto}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="150" y="65" width="260" height="16" style="Value"/>
                <textFieldExpression><![CDATA["Núm. empleado: " + $F{numEmpleado}]]></textFieldExpression>
            </textField>

            <!-- Badge ACTIVO / INACTIVO -->
            <textField isBlankWhenNull="true">
                <reportElement x="430" y="45" width="90" height="20">
                    <styleExpression><![CDATA[
                        ($F{activo} != null && $F{activo})
                            ? "BadgeActivo"
                            : "BadgeInactivo"
                    ]]></styleExpression>
                </reportElement>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[
                    ($F{activo} != null && $F{activo})
                        ? "ACTIVO"
                        : "INACTIVO"
                ]]></textFieldExpression>
            </textField>

            <!-- Margen interno de contenido -->
            <!-- xLeftLabel = 40, xLeftValue = 130, xRightLabel = 310, xRightValue = 400 -->

            <!-- ===== DATOS GENERALES ===== -->
            <staticText>
                <reportElement x="40" y="135" width="250" height="16" style="SectionTitle"/>
                <text><![CDATA[Datos generales]]></text>
            </staticText>

            <!-- Fila 1: Puesto / Departamento -->
            <staticText>
                <reportElement x="40" y="155" width="90" height="14" style="Label"/>
                <text><![CDATA[Puesto]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="155" width="160" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{puesto}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="310" y="155" width="90" height="14" style="Label"/>
                <text><![CDATA[Departamento]]></text>
            </staticText>
            <textField>
                <reportElement x="400" y="155" width="125" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{departamento}]]></textFieldExpression>
            </textField>

            <!-- Fila 2: Fecha ingreso / Supervisor -->
            <staticText>
                <reportElement x="40" y="173" width="90" height="14" style="Label"/>
                <text><![CDATA[Fecha ingreso]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="173" width="160" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{fechaIngreso}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="310" y="173" width="90" height="14" style="Label"/>
                <text><![CDATA[Supervisor]]></text>
            </staticText>
            <textField>
                <reportElement x="400" y="173" width="125" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{supervisorNombre}]]></textFieldExpression>
            </textField>

            <!-- Fila 3: F. nacimiento / Género -->
            <staticText>
                <reportElement x="40" y="191" width="90" height="14" style="Label"/>
                <text><![CDATA[F. nacimiento]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="191" width="160" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{fechaNacimiento}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="310" y="191" width="90" height="14" style="Label"/>
                <text><![CDATA[Género]]></text>
            </staticText>
            <textField>
                <reportElement x="400" y="191" width="125" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{genero}]]></textFieldExpression>
            </textField>

            <!-- Fila 4: Estado civil / Nacionalidad -->
            <staticText>
                <reportElement x="40" y="209" width="90" height="14" style="Label"/>
                <text><![CDATA[Estado civil]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="209" width="160" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{estadoCivil}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="310" y="209" width="90" height="14" style="Label"/>
                <text><![CDATA[Nacionalidad]]></text>
            </staticText>
            <textField>
                <reportElement x="400" y="209" width="125" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{nacionalidad}]]></textFieldExpression>
            </textField>

            <!-- Fila 5: Lugar nacimiento / Tipo sangre -->
            <staticText>
                <reportElement x="40" y="227" width="90" height="14" style="Label"/>
                <text><![CDATA[Lugar nacimiento]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="227" width="160" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{lugarNacimiento}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="310" y="227" width="90" height="14" style="Label"/>
                <text><![CDATA[Tipo sangre]]></text>
            </staticText>
            <textField>
                <reportElement x="400" y="227" width="125" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{tipoSangre}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="40" y="248" width="485" height="1" forecolor="#E5E7EB"/>
            </line>

            <!-- ===== DATOS DE CONTACTO ===== -->
            <staticText>
                <reportElement x="40" y="263" width="200" height="16" style="SectionTitle"/>
                <text><![CDATA[Datos de contacto]]></text>
            </staticText>

            <!-- Fila 1: Teléfono / Correo -->
            <staticText>
                <reportElement x="40" y="283" width="90" height="14" style="Label"/>
                <text><![CDATA[Teléfono]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="283" width="160" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{telefono}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="310" y="283" width="90" height="14" style="Label"/>
                <text><![CDATA[Correo electrónico]]></text>
            </staticText>
            <textField>
                <reportElement x="400" y="283" width="125" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{email}]]></textFieldExpression>
            </textField>

            <!-- Dirección (fila completa) -->
            <staticText>
                <reportElement x="40" y="301" width="90" height="14" style="Label"/>
                <text><![CDATA[Dirección]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="301" width="395" height="28" style="Value"/>
                <textElement verticalAlignment="Top"/>
                <textFieldExpression><![CDATA[$F{direccionCompleta}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="40" y="335" width="485" height="1" forecolor="#E5E7EB"/>
            </line>

            <!-- ===== DOCUMENTOS Y SEGURIDAD SOCIAL ===== -->
            <staticText>
                <reportElement x="40" y="350" width="250" height="16" style="SectionTitle"/>
                <text><![CDATA[Documentos y seguridad social]]></text>
            </staticText>

            <!-- CURP / RFC -->
            <staticText>
                <reportElement x="40" y="370" width="90" height="14" style="Label"/>
                <text><![CDATA[CURP]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="370" width="160" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{curp}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="310" y="370" width="90" height="14" style="Label"/>
                <text><![CDATA[RFC]]></text>
            </staticText>
            <textField>
                <reportElement x="400" y="370" width="125" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{rfc}]]></textFieldExpression>
            </textField>

            <!-- NSS / Reg. patronal -->
            <staticText>
                <reportElement x="40" y="388" width="90" height="14" style="Label"/>
                <text><![CDATA[NSS]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="388" width="160" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{nss}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="310" y="388" width="90" height="14" style="Label"/>
                <text><![CDATA[Reg. patronal IMSS]]></text>
            </staticText>
            <textField>
                <reportElement x="400" y="388" width="125" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{imssRegPatronal}]]></textFieldExpression>
            </textField>

            <!-- INFONAVIT / FONACOT -->
            <staticText>
                <reportElement x="40" y="406" width="90" height="14" style="Label"/>
                <text><![CDATA[INFONAVIT núm.]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="406" width="160" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{infonavitNumero}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="310" y="406" width="90" height="14" style="Label"/>
                <text><![CDATA[FONACOT núm.]]></text>
            </staticText>
            <textField>
                <reportElement x="400" y="406" width="125" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{fonacotNumero}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="40" y="430" width="485" height="1" forecolor="#E5E7EB"/>
            </line>

            <!-- ===== DATOS LABORALES Y BANCARIOS ===== -->
            <staticText>
                <reportElement x="40" y="445" width="250" height="16" style="SectionTitle"/>
                <text><![CDATA[Datos laborales y bancarios]]></text>
            </staticText>

            <!-- Banco / Cuenta -->
            <staticText>
                <reportElement x="40" y="465" width="90" height="14" style="Label"/>
                <text><![CDATA[Banco]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="465" width="160" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{banco}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="310" y="465" width="90" height="14" style="Label"/>
                <text><![CDATA[Cuenta bancaria]]></text>
            </staticText>
            <textField>
                <reportElement x="400" y="465" width="125" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{cuentaBancaria}]]></textFieldExpression>
            </textField>

            <!-- CLABE / Tipo contrato -->
            <staticText>
                <reportElement x="40" y="483" width="90" height="14" style="Label"/>
                <text><![CDATA[CLABE]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="483" width="160" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{clabe}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="310" y="483" width="90" height="14" style="Label"/>
                <text><![CDATA[Tipo contrato]]></text>
            </staticText>
            <textField>
                <reportElement x="400" y="483" width="125" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{tipoContrato}]]></textFieldExpression>
            </textField>

            <!-- Tipo jornada / Fecha baja -->
            <staticText>
                <reportElement x="40" y="501" width="90" height="14" style="Label"/>
                <text><![CDATA[Tipo jornada]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="501" width="160" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{tipoJornada}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="310" y="501" width="90" height="14" style="Label"/>
                <text><![CDATA[Fecha baja]]></text>
            </staticText>
            <textField>
                <reportElement x="400" y="501" width="125" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{fechaBaja}]]></textFieldExpression>
            </textField>

            <!-- Motivo baja (full width) -->
            <staticText>
                <reportElement x="40" y="519" width="90" height="14" style="Label"/>
                <text><![CDATA[Motivo baja]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="519" width="395" height="28" style="Value"/>
                <textElement verticalAlignment="Top"/>
                <textFieldExpression><![CDATA[$F{motivoBaja}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="40" y="552" width="485" height="1" forecolor="#E5E7EB"/>
            </line>

            <!-- ===== CONTACTO DE EMERGENCIA ===== -->
            <staticText>
                <reportElement x="40" y="567" width="250" height="16" style="SectionTitle"/>
                <text><![CDATA[Contacto de emergencia]]></text>
            </staticText>

            <!-- Nombre / Parentesco -->
            <staticText>
                <reportElement x="40" y="587" width="90" height="14" style="Label"/>
                <text><![CDATA[Nombre]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="587" width="160" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{contactoNombre}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="310" y="587" width="90" height="14" style="Label"/>
                <text><![CDATA[Parentesco]]></text>
            </staticText>
            <textField>
                <reportElement x="400" y="587" width="125" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{contactoParentesco}]]></textFieldExpression>
            </textField>

            <!-- Teléfono -->
            <staticText>
                <reportElement x="40" y="605" width="90" height="14" style="Label"/>
                <text><![CDATA[Teléfono]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="605" width="160" height="14" style="Value"/>
                <textFieldExpression><![CDATA[$F{contactoTelefono}]]></textFieldExpression>
            </textField>

        </band>
    </detail>
</jasperReport>
